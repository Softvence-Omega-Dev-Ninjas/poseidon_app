model ZoomAccount {
  id           String   @id @default(cuid())
  providerId   String   @unique
  zoomUserId   String
  email        String
  clientId     String
  clientSecret String
  apiBase      String
  createdAt    DateTime @default(now())
  provider     User     @relation(fields: [providerId], references: [id])
}

model ScheduledEvent {
  id                        String      @id @unique @default(uuid())
  utm_term_userId           String //utm_term
  salesforce_uuid_bergirlId String // salesforce_uuid
  user                      User        @relation(name: "scheduledEventToUser", fields: [utm_term_userId], references: [id], onDelete: Cascade)
  bergirl                   User        @relation(name: "scheduledEventToBergirl", fields: [salesforce_uuid_bergirlId], references: [id], onDelete: Cascade)
  // calendy
  schedulType_utm_source    SchedulType // utm_source  
  serviceid_utm_medium      String // utm_medium
  start_time                DateTime
  end_time                  DateTime
  join_url                  String
  duration                  Int // utm_content

  membershipTbId              String?                    @unique
  membershipVideoCallAccessTb PermissionVideoCallAccess? @relation(name: "membershipScheduledEvent", fields: [membershipTbId], references: [id])
  serviceOrderTbId            String?                    @unique
  serviceOrderTb              ServiceOrder?              @relation(name: "serviceOrderScheduledEvent", fields: [serviceOrderTbId], references: [id])
}

enum SchedulType {
  membership
  service
  supportercard
}
