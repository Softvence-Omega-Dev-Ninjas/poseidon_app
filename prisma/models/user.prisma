model User {
  id                  String             @id @unique @default(uuid())
  provider            String             @default("credentials")
  email               String
  password            String?
  otp                 String?
  varify              Boolean            @default(false)
  deactivate          Boolean            @default(false)
  role                Roles              @default(user)
  orders              Order[]
  profile             Profile?
  shop                Shop?
  support_cart_layout SupportCartLayout?
  author_supportor    SupporterPay[]     @relation("author_supportor")
  supporter           SupporterPay[]
  posts               Post[]
  comments            Comment[]
  likes               Like[]
  images              Image[]
  imageslikes         ImageLike[]
  imagescomments      ImageComment[]
}

model Profile {
  id          String  @default(uuid())
  userid      String  @unique
  name        String
  image       String
  cover_image String?
  address     String?
  state       String?
  city        String?
  country     String?
  postcode    String?
  user        User    @relation(fields: [userid], references: [id], onDelete: Cascade)
}

enum Roles {
  admin
  supporter
  user
}
