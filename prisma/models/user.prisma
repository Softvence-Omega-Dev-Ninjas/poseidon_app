model User {
    id         String   @id @unique @default(uuid())
    provider   String   @default("credentials") // credentials, google, facebook
    email      String
    password   String?
    otp        String?
    varify     Boolean  @default(false)
    deactivate Boolean  @default(false)
    profile    Profile?
    role       Role     @default(user)
     
    // supporters
    orders Order[] 
    supporter           SupporterPay[] // user buy support info
    author_supportor    SupporterPay[]     @relation("author_supportor") // author access
    support_cart_layout SupportCartLayout?

    shop                Shop?

}

model Profile {
    id       String  @default(uuid())
    userid   String  @unique
    user     User    @relation(fields: [userid], references: [id], onDelete: Cascade)
    name     String
    image    String
    address  String?
    state    String?
    city     String?
    country  String?
    postcode String?
}

enum Role {
    admin
    supporter
    user
}
