enum ServiceType {
    membership
    support
}

enum PaymemtStatus {
    pending
    unpaid
    paid
}

model paymentDetails {
    id            String        @id @unique @default(uuid())
    buyerId       String?
    sellerId      String
    serviceName   String
    amount        Float
    cs_number     String?
    paymemtStatus PaymemtStatus @default(pending)
    serviceType   ServiceType
    serviceId     String
    createAt      DateTime      @default(now())
    endDate       DateTime

    //access controller route
    PermissionVideoCallAccess PermissionVideoCallAccess?
    PermissionMessagesAccess  PermissionMessagesAccess?
    PermissionGalleryAccess   PermissionGalleryAccess?
    PermissionPostsAccess     PermissionPostsAccess?
}
